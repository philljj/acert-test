#!/bin/bash
cd wolfssl || exit 1

if [ $# -eq 1 ]; then
  echo "info: full rebuild"
  if [ -f configure ]; then
    rm configure
    autoreconf
  fi
fi

./configure \
  --enable-debug \
  --enable-acert \
  --enable-opensslextra \
  CFLAGS="-DWOLFSSL_DEBUG_ASN_TEMPLATE" \
  || exit 1
make || exit 1
sudo make install
